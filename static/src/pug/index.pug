doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title GEOVID@CMU

        link(rel='icon', type='image/x-icon', href='assets/img/favicon.ico')

        // Bootstrap icons
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css', rel='stylesheet')

        // Google fonts
        link(rel='preconnect', href='https://fonts.gstatic.com')
        link(href='https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&display=swap', rel='stylesheet')
        link(href="https://fonts.googleapis.com/css2?family=Jost:wght@700&family=Raleway:wght@600&display=swap", rel='stylesheet')

        // Core theme CSS (includes Bootstrap)
        link(href='css/styles.css', rel='stylesheet')

    body#page-top

        // Navigation
        nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.shadow-sm
            .container.px-5 
                a.navbar-brand.fw-bold(href='#page-top') GEOVID
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                    | Menu
                    i.bi-list
                #navbarResponsive.collapse.navbar-collapse
                    ul.navbar-nav.ms-auto.me-4.my-3.my-lg-0
                        li.nav-item
                            a.nav-link.me-lg-3(href='#features') Features
                        li.nav-item
                            a.nav-link.me-lg-3(href='#demo') Demo

        // Mashead header
        header.masthead
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-6
                        img(src='assets/img/logo.png', alt='...', style='height: 22rem; margin-left:70px',align='center')
                        // Mashead text and app badges
                        .mb-5.mb-lg-0.text-center.text-lg-start
                            h1.display-1.lh-1.mb-3
                            p.lead.fw-normal CMU's population hotspot map. Designed for you.
                            p.lead.fw-normal.mb-5 Find your next COVID-safe dining location on campus.
                            .d-flex.flex-column.flex-lg-row.align-items-center
                                a.unclickable.me-lg-3.mb-4.mb-lg-0(href='#!')
                                    img.app-badge(src='assets/img/coming-soon.png', alt='...')
                                //- a(href='#!')
                                    img.app-badge(src='assets/img/app-store-badge.svg', alt='...')

                    .col-lg-6
                        // Masthead device mockup feature
                        .masthead-device-mockup
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            .device-wrapper
                                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                    .screen.bg-black
                                        // PUT CONTENTS HERE:
                                        // * * This can be a video, image, or just about anything else.
                                        // * * Set the max width of your media to 100% and the height to
                                        // * * 100% like the demo example below.
                                        img(src='assets/img/login.png',style='max-width: 100%; height: 100%;')

        // Quote/testimonial aside
        aside.text-center.bg-gradient-primary-to-secondary
            .container.px-1
                .row.gx-1.justify-content-center
                    .col-xl-8
                        .h2.fs-1.text-white.mb-2 Stop Waiting. Start Eating.
                        .text-white.small Be COVID-Safe & Enjoy Shorter Wait Times
                .row.gx-1.justify-content-center
                        img(src='assets/img/logo-no-bg.png', alt='...', style='width: 10%; height: 10%;')

        // App features section
        section#features
            .container.px-5
                .row.gx-5.align-items-center
                    .col-lg-8.order-lg-1.mb-5.mb-lg-0
                        .container-fluid.px-5
                            .row.gx-5
                                .col-md-6.mb-5
                                    // Feature item
                                    .text-center
                                        i.bi-phone.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Privacy First
                                        p.text-muted.mb-0 
                                            a(href='https://blog.ironcorelabs.com/military-grade-encryption-69aae0145588') Military grade encryption 
                                            span and completely anonymized location data puts your privacy first
                                .col-md-6.mb-5 
                                    // Feature item
                                    .text-center
                                        i.bi-camera.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Smart Recommendations
                                        p.text-muted.mb-0 
                                            a(href='https://github.com/chen-robert/hackcmu21/blob/main/notebook.ipynb') Recurrent neural networks 
                                            span trained on historical location data predict future hotspots
                            .row
                                .col-md-6.mb-5.mb-md-0
                                    // Feature item
                                    .text-center
                                        i.bi-gift.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Open Source
                                        p.text-muted.mb-0 Our code is 
                                            a(href='https://github.com/chen-robert/hackcmu21') open-sourced under a permissive 
                                            span license to allow anybody to download and modify it for their own purposes
                                .col-md-6
                                    // Feature item
                                    .text-center
                                        i.bi-patch-check.icon-feature.text-gradient.d-block.mb-3
                                        h3.font-alt Error-Correcting
                                        p.text-muted.mb-0 3-pass algorithmn removes noise and optimizes location sharing, enabling accurate data analytics
                    .col-lg-4.order-lg-0
                        // Features section device mockup
                        .features-device-mockup
                            include includes/gradient-circle
                            include includes/shape-1
                            include includes/shape-2
                            .device-wrapper
                                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                                    .screen.bg-black
                                        // PUT CONTENTS HERE:
                                        // * * This can be a video, image, or just about anything else.
                                        // * * Set the max width of your media to 100% and the height to
                                        // * * 100% like the demo example below.
                                        img(src='assets/img/stats.png',style='max-width: 100%; height: 100%;')

        // Basic features section
        section.bg-light#demo
            .container.px-5
                .row.gx-5.align-items-center.justify-content-center.justify-content-lg-between
                    .col-12.col-lg-4
                        h2.display-4.lh-1.mb-4 Error Correction 
                        p.lead.fw-normal.text-muted.mb-5.mb-lg-0 Our 3-pass algorithmn efficiently corrects for noise in location data, giving population hotspots
                    .col-sm-8.col-md-7
                        .px-5.px-sm-0
                            iframe(src='/geovid/errors.html', alt='...', style='width: 100%; height: 550px; max-width: 614px')

        // Basic features section
        section
            .container.px-5
                .row.gx-5.align-items-center.justify-content-center.justify-content-lg-between
                    .col-sm-8.col-md-7
                        .px-5.px-sm-0
                            iframe(src='/geovid/index.html', alt='...', style='width: 100%; height: 550px; max-width: 614px')
                    .col-12.col-lg-4
                        h2.display-4.lh-1.mb-4 Heatmaps
                        p.lead.fw-normal.text-muted.mb-5.mb-lg-0 Realtime and historical population density heatmaps provide accurate information about crowded dining locations

        // Call to action section
        section.cta
            .cta-content
                .container.px-5
                    h2.text-white.display-5.lh-1.mb-4 Being an introvert 
                    h2.text-white.display-5.lh-1.mb-4 Just got so much easier

        // App badge section
        section#download.bg-gradient-primary-to-secondary
            .container.px-5
                h2.text-center.text-white.font-alt.mb-4 Coming Soon!
                .d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center
                    a.unclickable.me-lg-3.mb-4.mb-lg-0(href='#!')
                        img.app-badge(src='assets/img/coming-soon.png', alt='...')

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
                    .mb-2 &copy; GEOVID @ CMU 2021. All Rights Reserved.
        
        include includes/feedback-modal.pug

        // Bootstrap core JS
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js')

        // Core theme JS
        script(src='js/scripts.js')

